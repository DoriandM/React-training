@import "~/styles/vars"

body
	background: url("./assets/images/nature-pixel_art.png") no-repeat

.app
	color: $color-text
	max-width: 400px
	margin: 3em auto
	padding: 0.5em
	text-align: center
	background: white
	border: 2px solid black
	border-radius: 0.5em
	box-shadow: 6px 4px 22px -2px rgba(0,0,0,0.75)

	&-title
		color: $color-title
		text-align: center
		font-family: Cinzel
		font-size: 1.6em
		text-transform: uppercase;

	&-desc
		font-size: 1.1em
		line-height: 1.4
		margin: .25em 0

	&-link
		color: $color-link
		cursor: pointer
		display: block
		font-size: 1.1em
		margin: 1em 0
		text-align: center
		text-decoration: underline

		&--back
			text-align: left

			&::before
				content: ""
				display: inline-block
				background-size: contain
				width: .8em
				height: .8em
				margin-right: .25em
				transform: rotate(.5turn)

.form
	margin: 1em 0

	&-submit
		background: $color-button-background
		border: 0
		border-radius: 0
		color: $color-button
		font-size: 1em
		display: block
		text-transform: uppercase
		height: 3.3em
		width: 100%

		&.form-submit--login
			display: flex
			align-items: center
			justify-content: center
			&::before
				content: ""
				background-size: contain
				height: 1.5em
				width: 1.5em
				margin-right: .6em
